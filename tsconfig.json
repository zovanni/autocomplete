{
    "include": ["./src/**/*", "./src/vite-env.d.ts"],
    "compilerOptions": {
        "module": "esnext", // or 'es2020', 'es2022', etc.
        "target": "esnext", // recommended for Vite
        "moduleResolution": "bundler", // optional, but good for Vite + ESM
        "strict": true,
        "esModuleInterop": true,
        "lib": ["dom", "es2015"],
        "jsx": "react-jsx"
    }
}
